<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "drawing-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :drawing %>
  <%= textarea f, :drawing %>
  <%= error_tag f, :drawing %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
